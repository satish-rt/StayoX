  <!-- Listing Summary -->
  <section class="bg-white dark:bg-stone-900 rounded-2xl shadow-md p-6">
    <div class="flex items-center gap-6">

      <% if (booking.listing && booking.listing.image && booking.listing.image.url) { %>
