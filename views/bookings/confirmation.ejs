      <div>
        <h2 class="text-xl font-bold mb-1">
          <%= booking.listing.title %>
        </h2>

        <p class="text-sm text-stone-500">
          <i class="fas fa-map-marker-alt mr-1"></i>
          <%= booking.listing.location %>
        </p>
      </div>

    </div>
  </section>

  <!-- Actions -->
  <div class="mt-10 flex flex-wrap gap-4 justify-center">
