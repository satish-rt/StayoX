<% layout('/layouts/boilerplate') %>

<!-- HERO / LANDING SECTION -->
<main class="relative max-w-screen-2xl mx-auto px-6 lg:px-16">

  <!-- HERO -->
  <section class="min-h-[70vh] flex items-center justify-center text-center py-28">
    <div class="max-w-3xl">

      <!-- Badge -->
      <div class="flex justify-center items-center gap-3 mb-6">
        <span class="h-px w-10 bg-amber-400"></span>
        <span class="text-sm italic text-amber-600 tracking-wide">
          Curated Stays
        </span>
        <span class="h-px w-10 bg-amber-400"></span>
      </div>

      <!-- Heading -->
      <h1 class="font-header text-4xl md:text-5xl lg:text-6xl
                 leading-tight text-[#08112a] dark:text-white">
        Welcome to <br/>
        <span class="italic font-light text-stone-500 dark:text-stone-300">
          StayoX
        </span>
      </h1>

      <!-- Description -->
      <p class="text-stone-600 dark:text-stone-400 mt-6
                max-w-2xl mx-auto text-base md:text-lg leading-relaxed">
        Discover hand-picked homes crafted for comfort, elegance,
        and unforgettable travel experiences — wherever you go.
      </p>

      <!-- CTA Buttons -->
      <div class="mt-10 flex justify-center gap-5 flex-wrap">
        <a href="/listings"
           class="inline-flex items-center justify-center
                  bg-black text-white px-8 py-3.5
                  rounded-full uppercase tracking-widest
                  text-xs font-semibold hover:scale-105
                  transition-transform shadow-lg">
          Browse Properties
        </a>

        <a href="/signup"
           class="inline-flex items-center justify-center
                  border border-stone-300 dark:border-stone-600
                  px-8 py-3.5 rounded-full uppercase tracking-widest
                  text-xs font-semibold text-stone-700 dark:text-stone-200
                  hover:bg-stone-100 dark:hover:bg-stone-800
                  transition">
          Become a Member
        </a>
      </div>
    </div>
  </section>

  <!-- FEATURED LISTINGS -->
  <% if (allListing && allListing.length > 0) { %>
  <section class="mt-32">

    <!-- Section Header -->
    <div class="mb-16 text-center">
      <h2 class="font-header text-3xl md:text-4xl
                 text-[#08112a] dark:text-white">
        Featured Listings
      </h2>
      <p class="text-stone-600 dark:text-stone-400 mt-4">
        A selection of homes loved by travelers
      </p>
    </div>

    <!-- Listings Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
      <% allListing.slice(0,6).forEach(function(listing){ %>

        <div class="group cursor-pointer">
          <!-- Image -->
          <div class="relative aspect-[3/4] overflow-hidden rounded-2xl shadow-lg">
            <img
              src="<%= listing.image && listing.image.url ? listing.image.url : '/images/placeholder.png' %>"
              alt="<%= listing.title %>"
              class="w-full h-full object-cover
                     grayscale-[15%]
                     group-hover:grayscale-0
                     group-hover:scale-105
                     transition-all duration-700"/>

            <!-- Overlay -->
            <div class="absolute inset-0 bg-gradient-to-t
                        from-black/40 via-black/10 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="mt-5 space-y-1">
            <h3 class="font-medium text-lg text-[#08112a]
                       dark:text-white group-hover:text-blue-600
                       transition">
              <%= listing.title %>
            </h3>

            <p class="text-sm text-stone-500">
              <%= listing.location %>
            </p>

            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300">
              ₹<%= listing.price %> / night
            </p>
          </div>
        </div>

      <% }) %>
    </div>

    <!-- View All -->
    <div class="mt-20 text-center">
      <a href="/listings"
         class="inline-block bg-black text-white
                px-14 py-4 rounded-full
                uppercase tracking-widest text-xs
                font-semibold hover:scale-105
                transition-transform shadow-lg">
        View All Properties
      </a>
    </div>

  </section>
  <% } %>

</main>
