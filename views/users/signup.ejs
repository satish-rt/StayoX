<% layout("/layouts/boilerplate") %>

<main
  class="flex-grow flex flex-col justify-center items-center px-6 py-20 w-full relative"
>
  <!-- Abstract Background Detail -->
  <div
    class="absolute inset-0 overflow-hidden pointer-events-none z-0 opacity-40"
  >
    <div
      class="absolute -top-[10%] -right-[10%] w-[50vw] h-[50vw] bg-gradient-to-br from-slate-200/40 to-transparent rounded-full blur-3xl"
    ></div>
  </div>

  <div class="w-full max-w-[420px] z-10 flex flex-col gap-12">
    <!-- Branding -->
    <div class="text-center space-y-2">
      <div class="flex justify-center mb-6">
        <div class="w-8 h-8 text-slate-900 dark:text-white">
          <svg
            fill="none"
            viewBox="0 0 48 48"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              clip-rule="evenodd"
              d="M24 4H6V17.3333V30.6667H24V44H42V30.6667V17.3333H24V4Z"
              fill="currentColor"
              fill-rule="evenodd"
            ></path>
          </svg>
        </div>
      </div>
      <h1
        class="text-3xl md:text-4xl font-bold tracking-tight text-slate-900 dark:text-white"
      >
        STAYOX
      </h1>
      <p class="text-slate-500 dark:text-slate-400 text-sm tracking-wide">
        Join our community of travelers.
      </p>
    </div>

    <!-- Tabs -->
    <div
      class="flex justify-center w-full border-b border-slate-300 dark:border-slate-700"
    >
      <div class="flex w-full gap-8">
        <a
          class="flex-1 pb-3 text-center border-b border-transparent text-slate-400 dark:text-slate-500 hover:text-slate-600 dark:hover:text-slate-300 hover:border-slate-300 dark:hover:border-slate-600 transition-all"
          href="/login"
        >
          <span class="text-sm font-bold tracking-widest uppercase"
            >Log In</span
          >
        </a>
        <a
          class="flex-1 pb-3 text-center border-b-2 border-slate-900 dark:border-white text-slate-900 dark:text-white transition-all"
          href="/signup"
        >
          <span class="text-sm font-bold tracking-widest uppercase"
            >Sign Up</span
          >
        </a>
      </div>
    </div>

    <!-- Form -->
    <form action="/signup" method="POST" class="flex flex-col gap-8 pt-4">
      <!-- First & Last Name Row -->
      <div class="grid grid-cols-2 gap-4">
        <!-- First Name Field -->
        <div class="group relative">
          <input
            class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
            id="firstName"
            name="firstName"
            placeholder="First Name"
            type="text"
            required
          />
          <label
            class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
            for="firstName"
          >
            First Name
          </label>
        </div>

        <!-- Last Name Field -->
        <div class="group relative">
          <input
            class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
            id="lastName"
            name="lastName"
            placeholder="Last Name"
            type="text"
            required
          />
          <label
            class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
            for="lastName"
          >
            Last Name
          </label>
        </div>
      </div>

      <!-- Username Field -->
      <div class="group relative">
        <input
          class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
          id="username"
          name="username"
          placeholder="Username"
          type="text"
          required
        />
        <label
          class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
          for="username"
        >
          Username
        </label>
      </div>

      <!-- Email Field -->
      <div class="group relative">
        <input
          class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
          id="email"
          name="email"
          placeholder="Email"
          type="email"
          required
        />
        <label
          class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
          for="email"
        >
          Email Address
        </label>
      </div>

      <!-- Phone Number Field -->
      <div class="group relative">
        <input
          class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
          id="phoneNumber"
          name="phoneNumber"
          placeholder="Phone"
          type="tel"
        />
        <label
          class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
          for="phoneNumber"
        >
          Phone Number
        </label>
      </div>

      <!-- Password Field -->
      <div class="group relative">
        <input
          class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
          id="password"
          name="password"
          placeholder="Password"
          type="password"
          required
        />
        <label
          class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
          for="password"
        >
          Password
        </label>
      </div>

      <!-- Confirm Password Field -->
      <div class="group relative">
        <input
          class="peer w-full bg-transparent border-0 border-b border-slate-300 dark:border-slate-600 py-3 text-base text-slate-900 dark:text-white placeholder-transparent focus:border-slate-900 dark:focus:border-white focus:ring-0 transition-colors duration-300"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="Confirm Password"
          type="password"
          required
        />
        <label
          class="absolute left-0 -top-3.5 text-xs text-slate-500 dark:text-slate-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-slate-400 dark:peer-placeholder-shown:text-slate-500 peer-placeholder-shown:top-3 peer-focus:-top-3.5 peer-focus:text-xs peer-focus:text-slate-900 dark:peer-focus:text-white cursor-text"
          for="confirmPassword"
        >
          Confirm Password
        </label>
      </div>

      <!-- Submit Button -->
      <button
        class="w-full bg-slate-900 dark:bg-white text-white dark:text-slate-900 h-14 uppercase tracking-[0.15em] text-xs font-bold hover:bg-slate-800 dark:hover:bg-slate-100 transition-colors duration-300 flex items-center justify-center gap-2 group rounded-none mt-4"
        type="submit"
      >
        Create Account
        <span
          class="material-symbols-outlined text-[16px] group-hover:translate-x-1 transition-transform duration-300"
          >arrow_forward</span
        >
      </button>
    </form>

    <!-- Footer Links -->
    <div
      class="text-center pt-8 border-t border-slate-300 dark:border-slate-700"
    >
      <p class="text-xs text-slate-400 dark:text-slate-500 leading-relaxed">
        Already have an account?
        <a
          class="text-slate-900 dark:text-white font-semibold hover:underline underline-offset-2"
          href="/login"
          >Log in</a
        >
      </p>
    </div>
  </div>
</main>
