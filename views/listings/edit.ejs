<% layout("/layouts/boilerplate") %>

<main class="relative max-w-5xl mx-auto px-6 lg:px-12 py-16">
  <!-- Header -->
  <div class="mb-16 pb-12 border-b border-stone-200 dark:border-stone-700">
    <div class="flex items-center gap-4 mb-6">
      <span class="h-px w-12 bg-blue-600"></span>
      <span class="font-display text-blue-600 text-lg italic">Edit Property</span>
    </div>
    <h1 class="font-display text-5xl lg:text-6xl font-medium text-editorial-black dark:text-stone-100">
      Update Your Listing
    </h1>
    <p class="font-body text-stone-600 dark:text-stone-400 text-lg mt-4 max-w-2xl">
      Keep your property information up to date. Click the map to set coordinates.
    </p>
  </div>

  <!-- Main Form -->
  <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="space-y-12" enctype="multipart/form-data">
    
    <!-- SECTION 1: BASIC INFO -->
    <section>
      <h2 class="font-display text-2xl font-medium text-editorial-black dark:text-stone-100 mb-8">Basic Information</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left: Title & Description -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Title -->
          <div>
            <label for="title" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Title</label>
            <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" placeholder="e.g., Luxury Beach Villa" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition" required>
          </div>

          <!-- Description -->
          <div>
            <label for="description" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Description</label>
            <textarea id="description" name="listing[description]" placeholder="Describe your property in detail..." class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent h-40 resize-none transition" required><%= listing.description %></textarea>
          </div>
        </div>

        <!-- Right: Property Type & Listing Type -->
        <div class="space-y-8">
          <!-- Property Type -->
          <div>
            <label for="propertyType" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Property Type</label>
            <select id="propertyType" name="listing[propertyType]" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
              <option value="Apartment" <%= listing.propertyType === 'Apartment' ? 'selected' : '' %>>Apartment</option>
              <option value="House" <%= listing.propertyType === 'House' ? 'selected' : '' %>>House</option>
              <option value="Villa" <%= listing.propertyType === 'Villa' ? 'selected' : '' %>>Villa</option>
              <option value="Cabin" <%= listing.propertyType === 'Cabin' ? 'selected' : '' %>>Cabin</option>
              <option value="Condo" <%= listing.propertyType === 'Condo' ? 'selected' : '' %>>Condo</option>
              <option value="Other" <%= listing.propertyType === 'Other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>

          <!-- Listing Type -->
          <div>
            <label for="listingType" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Listing Type</label>
            <select id="listingType" name="listing[listingType]" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition" onchange="updatePriceLabel()">
              <option value="For Rent" <%= listing.listingType === 'For Rent' ? 'selected' : '' %>>For Rent</option>
              <option value="For Sale" <%= listing.listingType === 'For Sale' ? 'selected' : '' %>>For Sale</option>
            </select>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 2: PRICING & LOCATION -->
    <section class="pt-12 border-t border-stone-200 dark:border-stone-700">
      <h2 class="font-display text-2xl font-medium text-editorial-black dark:text-stone-100 mb-8">Pricing & Location</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Price -->
        <div>
          <label for="price" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest"><span id="priceLabel">Price Per Night</span></label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-stone-500">â‚¹</span>
            <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" placeholder="1200" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 pl-8 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
          </div>
        </div>

        <!-- Location -->
        <div>
          <label for="location" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Location</label>
          <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" placeholder="City, State" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Country -->
        <div>
          <label for="country" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Country</label>
          <input type="text" id="country" name="listing[country]" value="<%= listing.country %>" placeholder="India" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>
      </div>
    </section>

    <!-- SECTION 3: CAPACITY -->
    <section class="pt-12 border-t border-stone-200 dark:border-stone-700">
      <h2 class="font-display text-2xl font-medium text-editorial-black dark:text-stone-100 mb-8">Property Capacity</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <!-- Bedrooms -->
        <div>
          <label for="bedrooms" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Bedrooms</label>
          <input type="number" id="bedrooms" name="listing[bedrooms]" value="<%= listing.bedrooms || 1 %>" min="1" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Beds -->
        <div>
          <label for="beds" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Beds</label>
          <input type="number" id="beds" name="listing[beds]" value="<%= listing.beds || 1 %>" min="1" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Bathrooms -->
        <div>
          <label for="bathrooms" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Bathrooms</label>
          <input type="number" id="bathrooms" name="listing[bathrooms]" value="<%= listing.bathrooms || 1 %>" min="1" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Max Guests -->
        <div>
          <label for="maxGuests" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Max Guests</label>
          <input type="number" id="maxGuests" name="listing[maxGuests]" value="<%= listing.maxGuests || 2 %>" min="1" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>
      </div>
    </section>

    <!-- SECTION 4: AMENITIES & IMAGE -->
    <section class="pt-12 border-t border-stone-200 dark:border-stone-700">
      <h2 class="font-display text-2xl font-medium text-editorial-black dark:text-stone-100 mb-8">Amenities & Image</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Amenities -->
        <div>
          <label for="amenities" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Amenities (comma separated)</label>
          <textarea id="amenities" name="listing[amenities]" placeholder="WiFi, Pool, Kitchen, Air Conditioning, Garden..." class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent h-32 resize-none transition"><%= listing.amenities ? listing.amenities.join(', ') : '' %></textarea>
          <p class="text-xs text-stone-500 dark:text-stone-400 mt-2">Separate each amenity with a comma</p>
        </div>

        <!-- Image -->
        <div>
          <label class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Upload Image</label>
          
          <!-- Current Image Preview -->
          <div class="mb-6">
            <% if (originalImageUrl) { %>
              <div class="relative w-full aspect-square bg-stone-100 dark:bg-stone-800 overflow-hidden border border-stone-200 dark:border-stone-700 mb-4">
                <img src="<%= originalImageUrl %>" alt="Current Listing" class="w-full h-full object-cover">
              </div>
              <p class="text-xs text-stone-500 dark:text-stone-400">Current image</p>
            <% } else { %>
              <div class="w-full aspect-square bg-stone-100 dark:bg-stone-800 border border-dashed border-stone-300 dark:border-stone-600 flex items-center justify-center mb-4">
                <div class="text-center">
                  <span class="material-icons text-4xl text-stone-400 block mb-2">image</span>
                  <p class="text-stone-400 text-sm">No image yet</p>
                </div>
              </div>
            <% } %>
          </div>

          <!-- File Upload -->
          <label class="block">
            <input type="file" name="listing[image]" class="block w-full text-sm text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-medium file:bg-blue-600 file:text-white hover:file:bg-blue-700 cursor-pointer">
            <p class="text-xs text-stone-500 dark:text-stone-400 mt-2">JPG, PNG, or WebP. Max 5MB.</p>
          </label>
        </div>
      </div>
    </section>

    <!-- SECTION 5: COORDINATES & MAP -->
    <section class="pt-12 border-t border-stone-200 dark:border-stone-700">
      <h2 class="font-display text-2xl font-medium text-editorial-black dark:text-stone-100 mb-8">Location Coordinates</h2>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
        <!-- Latitude -->
        <div>
          <label for="latitude" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Latitude</label>
          <input type="number" step="0.000001" id="latitude" name="listing[latitude]" value="<%= listing.latitude || '' %>" placeholder="Click on map to set" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Longitude -->
        <div>
          <label for="longitude" class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Longitude</label>
          <input type="number" step="0.000001" id="longitude" name="listing[longitude]" value="<%= listing.longitude || '' %>" placeholder="Click on map to set" class="w-full bg-white dark:bg-stone-800 border border-stone-200 dark:border-stone-700 px-4 py-3 text-stone-900 dark:text-stone-50 focus:ring-2 focus:ring-blue-600 focus:border-transparent transition">
        </div>

        <!-- Tip -->
        <div class="flex items-end">
          <div class="p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 text-blue-900 dark:text-blue-100 text-xs rounded">
            <span class="font-medium">Tip:</span> Click on the map below to set coordinates automatically.
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="relative">
        <label class="block font-body font-medium text-stone-700 dark:text-stone-300 mb-3 text-sm uppercase tracking-widest">Click on map to set location</label>
        <div id="map" style="height: 400px;" data-lat="<%= listing.latitude || '' %>" data-lng="<%= listing.longitude || '' %>" class="w-full border border-stone-200 dark:border-stone-700 overflow-hidden"></div>
      </div>
    </section>

    <!-- SECTION 6: ACTIONS -->
    <section class="pt-16 border-t border-stone-200 dark:border-stone-700">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-6">
        <!-- Delete Button (Left) -->
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
          <button type="submit" class="px-8 py-3 bg-red-600 hover:bg-red-700 text-white font-body font-bold uppercase tracking-widest text-xs transition-colors" onclick="return confirm('Are you sure you want to delete this listing? This action cannot be undone.');">
            Delete Listing
          </button>
        </form>

        <!-- Action Buttons (Right) -->
        <div class="flex items-center gap-4">
          <a href="/listings/<%= listing._id %>" class="px-8 py-3 border border-stone-300 dark:border-stone-600 text-stone-700 dark:text-stone-300 hover:bg-stone-100 dark:hover:bg-stone-800 font-body font-bold uppercase tracking-widest text-xs transition-colors">
            Cancel
          </a>
          <button type="submit" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-body font-bold uppercase tracking-widest text-xs transition-colors">
            Update Listing
          </button>
        </div>
      </div>
    </section>
  </form>
</main>

<script>
  function updatePriceLabel() {
    const listingType = document.getElementById('listingType').value;
    const priceLabel = document.getElementById('priceLabel');
    priceLabel.textContent = listingType === 'For Rent' ? 'Price Per Night' : 'Sale Price';
  }
</script>
