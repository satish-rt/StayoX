<% layout("/layouts/boilerplate") %>
<body>
    <div class="container mt-3">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Creating a New Listing</h1>
                <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                    
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text"
                         name="listing[title]" 
                         placeholder="Enter the title" 
                         class="form-control"
                         required>
                        <div class="valid-feedback">
                          Title looks good!
                        </div>
                        <div class="invalid-feedback">
                          Please enter a title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]"
                         placeholder="Enter the description" 
                         class="form-control"
                         required></textarea>
                        <div class="valid-feedback">
                          Description is set!
                        </div>
                        <div class="invalid-feedback">
                          Please enter a description.
                        </div>
                    </div>

                     <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" 
                        name="listing[image]" 
                        class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input 
                            type="number"
                            name="listing[price]" 
                            placeholder="1200" 
                            class="form-control"
                            required>
                            <div class="valid-feedback">
                              Price entered!
                            </div>
                            <div class="invalid-feedback">
                              Please enter a valid price.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" 
                            name="listing[location]" 
                            placeholder="Mumbai Maharashtra" 
                            class="form-control"
                            required>
                            <div class="valid-feedback">
                              Location looks good!
                            </div>
                            <div class="invalid-feedback">
                              Please enter a location.
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" 
                        name="listing[country]" 
                        placeholder="India" 
                        class="form-control"
                        required>
                        <div class="valid-feedback">
                          Country entered!
                        </div>
                        <div class="invalid-feedback">
                          Please enter a country name.
                        </div>
                    </div>

                    <br>
                    <button type="submit" class="btn btn-dark add-btn mb-3">Add</button>
                </form>
            </div>
        </div>
    </div>
</body>
