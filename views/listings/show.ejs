<% layout("/layouts/boilerplate") %>
  <div class="container mt-3">

    <!-- Title -->
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h3><%= listing.title %></h3>
      </div>
    </div>

    <!-- Listing Card -->
    <div class="row">
      <div class="card col-md-6 mx-auto show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text"><i>Owned by <%= listing.owner.username %></i></p>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text"><strong>Price:</strong> ₹ <%= listing.price ? listing.price : "N/A" %></p>
          <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
          <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>

          <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark mt-3">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
              <button type="submit" class="btn btn-danger mt-3">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Review Form -->
    <div class="row mt-4">
      <div class="col-md-8 offset-md-2">
        <h4>Leave a Review</h4>

        <% if (currUser) { %>
           <hr>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <!-- Star Rating -->
            <div class="mb-3">
              <legend>Rating:</legend>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating.">
                <input type="radio" id="first-rate1" name="review[rating]" value="1">
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2">
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3">
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4">
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5">
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>

            <!-- Comment -->
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" rows="5" class="form-control" required></textarea>
              <div class="valid-feedback">Comment looks good!</div>
              <div class="invalid-feedback">Please enter a comment.</div>
            </div>

            <button class="btn btn-outline-dark">Submit</button>
          </form>
        <% } %>

        <!-- Show All Reviews -->
        <hr class="mt-4">
        <h5><strong>All Reviews</strong></h5>
        <div class="row">
          <% for (let review of listing.reviews) { %>
            <div class="card col-md-5 ms-3 mb-3 card-review">
              <div class="card-body">
                <h6 class="card-title"><%= review.author.username %></h6>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text" aria-label="Rating: <%= review.rating %> out of 5">
                  <% for (let i = 0; i < review.rating; i++) { %>⭐<% } %>
                </p>

                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mt-2">
                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

  </div>
